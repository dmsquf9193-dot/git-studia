-- INNER JOIN - 교집합의 값만 조회, 나머지는 보이지 않음
-- FROM이 기준임 JOIN은 굴러들어온 돌임
-- 사번, 이름, 연봉 조회
SELECT e.emp_no, e.first_name, s.salary 
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no 
WHERE s.to_date = '9999-01-01';

-- 다 가지고 오는 것
SELECT *
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no 
WHERE s.to_date = '9999-01-01';

-- 사번, 이름, 직무 조회 (헌재 재직중인)
SELECT e.emp_no, first_name, title
FROM employees e 
JOIN titles t 
ON e.emp_no = t. emp_no 
WHERE t.to_date = '9999-01-01';

-- union은 세로로 합체함
-- join은 가로로 합체함 로보트임

-- 사번,이름,연봉, 직무
SELECT e.emp_no, first_name, salary, title
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no
JOIN titles t 
ON  e.emp_no = t.emp_no
WHERE t.to_date = '9999-01-01';

-- LEFT JOIN 비워져 있어도 왼쪽에오면 한바가지 채워져있음ㅋ
SELECT *
FROM departments d
LEFT JOIN dept_manager dm
ON d.dept_no = dm.dept_no;

-- right join 비워져 있어도 오른쪽에 오면 한바가지 채워져있음
SELECT *
FROM dept_manager dm
RIGHT JOIN departments d
ON dm.dept_no = d.dept_no;







